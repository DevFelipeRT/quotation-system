<?php
/**
 * Template for the main navigation menu, styled for Bootstrap 5.
 * This partial is intended to be included inside a Bootstrap navbar component.
 *
 * @var \Rendering\Domain\Partial\ValueObject\Navigation\NavigationLink[] $links An array of navigation link objects.
 */
?>

<!-- This list will be injected into the collapsible navbar div -->
<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
    <?php foreach ($links as $link): ?>
        <li class="nav-item">
            <?php
                $linkClass = 'nav-link';
                $ariaCurrent = '';
                if ($link->isActive()) {
                    $linkClass .= ' active';
                    $ariaCurrent = ' aria-current="page"';
                }
            ?>
            <a class="<?= $linkClass ?>"<?= $ariaCurrent ?> href="<?= htmlspecialchars($link->url(), ENT_QUOTES, 'UTF-8') ?>">
                <?= htmlspecialchars($link->label(), ENT_QUOTES, 'UTF-8') ?>
            </a>
        </li>
    <?php endforeach; ?>
</ul>
